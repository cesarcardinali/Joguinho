<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/swords"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_margin="2dp"
        android:background="@drawable/bgd_player_menu"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Twhite"
            android:orientation="vertical" >
            
            <TextView 
                android:id="@+id/PlayerName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Player 1 - 20"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:textColor="#000"
                />
            
            <EditText
                android:id="@+id/PlayerText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:background="@color/Twhite"
                android:inputType="textMultiLine"
                android:text="Your Turn ..."
                android:clickable="false"
                android:editable="false"
                android:focusable="false"
                android:textSize="12sp"
                android:gravity="top|left"
                android:lines="10"
                android:textStyle="italic"
                />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Twhite"
            android:orientation="vertical" >
            
             <TextView 
                android:id="@+id/BotName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Bot: 20"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:textColor="#000"
                />
            
            <EditText
                android:id="@+id/BotText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:text="Waiting ..."
                android:clickable="false"
                android:editable="false"
                android:focusable="false"
                android:textSize="12sp"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:background="@color/Twhite"
                android:lines="10"
                android:textStyle="italic"
                />
            
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="3"
        android:background="@drawable/bgd_jogo_menu"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="3dp"
            android:background="@color/Twhite"
            android:orientation="horizontal" >

            <Button
                android:layout_width="30pt"
                android:layout_height="fill_parent"
                android:background="@color/Twhite"
                android:clickable="false"
                android:text="Actions:"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/Battack"
                android:layout_width="28pt"
                android:layout_height="16pt"
                android:layout_margin="5dp"
                android:background="@drawable/button_attack"
                android:text="Attack"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
            
            <Button
                android:id="@+id/Bpass"
                android:layout_width="28pt"
                android:layout_height="16pt"
                android:layout_margin="5dp"
                android:background="@drawable/button_pass"
                android:text="Pass"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
            
            <Button
                android:id="@+id/Bopt"
                android:layout_width="20pt"
                android:layout_height="16pt"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button1"
                android:text="Options"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/Twhite"
            android:layout_gravity="center_horizontal"
            android:layout_margin="3dp"
            android:orientation="horizontal" >

            <Button
                android:layout_width="30pt"
                android:layout_height="fill_parent"
                android:background="@color/Twhite"
                android:clickable="false"
                android:text="Builds / Armys :"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

            
            <Button
                android:id="@+id/Btech"
                android:layout_width="28pt"
                android:layout_height="16pt"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:background="@drawable/button_build"
                android:padding="3dp"
                android:text="Technology"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />
            
            <Button
                android:id="@+id/Bwall"
                android:layout_width="28pt"
                android:layout_height="16pt"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:background="@drawable/button_build"
                android:padding="3dp"
                android:text="Wall"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
                     
            <Button
                android:id="@+id/Bsold"
                android:layout_width="28pt"
                android:layout_height="16pt"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:background="@drawable/button_build"
                android:padding="3dp"
                android:text="Soldiers"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/Twhite"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <Button
                android:layout_width="34pt"
                android:layout_height="fill_parent"
                android:padding="1dp"
                android:background="@color/Twhite"
                android:clickable="false"
                android:text="Resources: "
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold|italic" />

            
            <ImageView 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/coins"
                />
            
            <Button
                android:id="@+id/Tgold"
                android:layout_width="wrap_content"
                android:layout_height="16pt"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:background="@color/Twhite"
                android:padding="1dp"
                android:text="Gold"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
            
            <ImageView 
                android:contentDescription="Defense level"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/shield"
                />
            
            <Button
                android:id="@+id/Twall"
                android:layout_width="wrap_content"
                android:layout_height="16pt"
                android:gravity="center_vertical"
                android:background="@color/Twhite"
                android:padding="1dp"
                android:layout_marginRight="8dp"
                android:text="WL"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
            
            <ImageView 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/swords1"
                />
            
            <Button
                android:id="@+id/Tsold"
                android:layout_width="wrap_content"
                android:layout_height="16pt"
                android:gravity="center_vertical"
                android:background="@color/Twhite"
                android:padding="1dp"
                android:layout_marginRight="8dp"
                android:text="Sold"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
            
            <ImageView 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/tech"
                />
            
            <Button
                android:id="@+id/Ttech"
                android:layout_width="wrap_content"
                android:layout_height="16pt"
                android:gravity="center_vertical"
                android:background="@color/Twhite"
                android:padding="1dp"
                android:layout_marginRight="8dp"
                android:text="Tech"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
            
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Non focused states -->
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1.5dp" android:color="#000000" />
            <corners android:radius="3dp" />
            <gradient android:type="radial" android:gradientRadius="130.1" android:endColor="#FF0000" android:startColor="#FFAA88" />
        </shape>
    </item>
    
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1.5dp" android:color="#000000" />
            <corners android:radius="3dp" />
            <gradient android:type="radial" android:gradientRadius="130.1" android:endColor="#FF0000" android:startColor="#FFAAAA" />
        </shape></item>


<!-- Pressed -->
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1.5dp" android:color="#000000" />
            <corners android:radius="5dp" />
            <gradient android:type="radial" android:gradientRadius="130.1" android:startColor="#FF0000" android:endColor="#FFAAAA" />
        </shape>
        </item>

</selector>